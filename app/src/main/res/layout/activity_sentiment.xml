<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="minhnv.xda.edu.banhangonline.activity.Sentiment">
    <android.support.v7.widget.Toolbar
        app:title="Sentiment Analysis"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="#baa3a3"
        android:id="@+id/toolbarsentiment"
        android:background="#464a4f">
    </android.support.v7.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="Hello"
        android:textSize="20dp"/>

</ScrollView>
<EditText
    android:textColor="@color/bgToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/edit"/>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnsent"
    android:text="Sentiment"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSentiment"/>
</LinearLayout>
