<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="10"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="minhnv.xda.edu.banhangonline.activity.GioHangMua">
    <android.support.v7.widget.Toolbar
        app:title="Giỏ hàng của bạn"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:titleTextColor="#f2f607"
        android:id="@+id/toolbargiohang"
        android:background="#ed0e42">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="7.5">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txtThongBao"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="#f00"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giỏ hàng bạn đang trống!"/>
            <ListView
                android:id="@+id/lvGioHang"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="0.5">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Tổng Giá:"
            android:textColor="#f00"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <TextView
            android:layout_weight="1"
            android:id="@+id/txtTongTien"
            android:layout_width="0dp"
            android:textColor="#f00"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="match_parent"
            android:text="5.000.000.000 Đ"/>

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/btnThanhToanGioHang"
        android:layout_weight="1"
        android:background="#f20852"
        android:text="Tiến hành thanh toán"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/btnTiepTucMuaHang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#0cf555"
        android:text="Tiếp tục mua hàng"
        android:textSize="20dp"/>
</LinearLayout>
